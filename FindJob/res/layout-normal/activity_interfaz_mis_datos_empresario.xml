<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo_portrait7"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/TxtMisDatos"
        android:textAppearance="@style/EstiloNegrasText"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edNombreCompletoTrabajador"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_txt_style2"
        android:ems="10"
        android:hint="@string/HitRazonSocial"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="#000000"
        android:width="150dp" 
        android:maxLength="30"/>

    <EditText
        android:id="@+id/edRutTrabajadorMisDatos"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_txt_style2"
        android:ems="10"
        android:hint="@string/HitRutEmpresa"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="#000000"
        android:width="150dp" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="260dp"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.09"
        android:background="@drawable/edit_txt_style2"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/HitGiro"
        android:lines="8"
        android:maxLength="30"
        android:maxLines="8"
        android:minLines="8"
        android:textColor="#000000"
        android:width="150dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_style_negro"
        android:onClick="OnClickSiguienteMisDatos"
        android:text="@string/BtnSiguiente"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>